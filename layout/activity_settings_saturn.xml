<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/CadetBlue"
    tools:context=".SettingsSaturn">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lime"
        android:id="@+id/toolbarshowselectdata"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:onClick="settingssaturn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_revert" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Set Notifications"
                android:textColor="@color/Black"
                android:fontFamily="@font/aladin"
                android:textSize="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        <Switch-->
<!--            android:id="@+id/appsswitch"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Edit Profile"-->
<!--            android:textSize="25sp"-->
<!--            android:layout_marginLeft="10dp"-->
<!--            android:layout_marginRight="10dp"-->
<!--            android:layout_marginTop="50dp"-->
<!--            android:textColor="@color/Wheat"-->
<!--            android:fontFamily="@font/catamaran_medium"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="        Here you are Ensuring that this app sends Notifications Regarding Task Completions."
            android:textColor="@color/White"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <Switch
            android:id="@+id/tasksswitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Notifications"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/Wheat"
            android:fontFamily="@font/catamaran_medium"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="        It will take too much space to store every deleted tasks, Make sure you save space, while deleting all the deleted or completed tasks permanently."
            android:textColor="@color/White"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <Switch
            android:id="@+id/diaryswitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear all Deleted or Completed Tasks"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/Wheat"
            android:fontFamily="@font/catamaran_medium"/>
    </LinearLayout>

</LinearLayout>