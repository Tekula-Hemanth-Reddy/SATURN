<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/CadetBlue"
    tools:context=".prfacc.Profile">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lime"
        android:id="@+id/toolbarshowselectdata"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:onClick="appsprofile"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_revert" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Profile"
                android:textColor="@color/Black"
                android:fontFamily="@font/aladin"
                android:textSize="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backonlylogo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="300dp"
           android:layout_marginLeft="20dp"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/nameprofiletext"
               android:layout_width="90dp"
               android:layout_height="match_parent"
               android:transitionName="profiletextname"
               android:layout_marginLeft="10dp"
               android:layout_margin="5dp"
               android:layout_marginBottom="5dp"
               android:textColor="@color/Black"
               android:text="Name : "
               android:textSize="25dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Name"
               android:transitionName="profileeditname"
               android:textSize="25dp"
               android:fontFamily="@font/aladin"
               android:textColor="@color/Wheat"
               android:layout_marginLeft="10dp"
               android:layout_marginBottom="5dp"
               android:layout_marginTop="5dp"
               android:id="@+id/profilename"/>
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mailprofiletext"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/Black"
                android:transitionName="profiletextmail"
                android:text="Mail    : "
                android:textSize="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mail"
                android:transitionName="profileeditmail"
                android:textSize="25dp"
                android:fontFamily="@font/aladin"
                android:textColor="@color/Wheat"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/profilemail"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/phnoprofiletext"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/Black"
                android:transitionName="profiletextphonenumber"
                android:text="Phno  : "
                android:textSize="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone Number"
                android:textSize="25dp"
                android:transitionName="profileeditphonenumber"
                android:fontFamily="@font/aladin"
                android:textColor="@color/Wheat"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/profilphonenumber"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Details"
            android:textColor="@color/Wheat"
            android:fontFamily="@font/catamaran_medium"
            android:background="@color/CadetBlue"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:transitionName="profileeditbutton"
            android:onClick="editdetails"/>

    </LinearLayout>
    </ScrollView>

</LinearLayout>