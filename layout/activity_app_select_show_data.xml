<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/CadetBlue"
    tools:context=".sctaps.App_select_show_data">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lime"
        android:id="@+id/toolbarshowselectdata"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:onClick="appselectshowdata"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_revert" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Apps Stats"
                android:textColor="@color/Black"
                android:fontFamily="@font/aladin"
                android:textSize="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#003366"
        >

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:textColor="@color/Wheat"
            android:layout_marginLeft="20dp"

            android:layout_marginBottom="10dp"
            android:id="@+id/appssearchappsid"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search"

            android:layout_marginLeft="10dp"
            android:id="@+id/appssearchimagebutton"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_sort"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left"
            android:onClick="sortbynames"
            />



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Over usage of phone may damage your health, so stop using phone unnecessarily."
        android:textColor="@color/Wheat"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:id="@+id/appslistappsofphone"
        android:layout_marginRight="10dp">

    </ListView>
